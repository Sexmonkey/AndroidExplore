<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_bac">
    <include layout="@layout/common_toolbar" />

    <EditText
        android:id="@+id/edit_register_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_48"
        android:background="@drawable/bg_conner_grey"
        android:layout_centerInParent="true"
        android:inputType="textPassword"
        android:hint="@string/register_password_hint"
        android:textColorHint="@color/white"
        android:padding="@dimen/dp_12"
        android:drawableStart="@drawable/ic_register_password"
        android:drawablePadding="@dimen/dp_20" />

    <EditText
    android:id="@+id/edit_register_account"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:layout_above="@+id/edit_register_password"
    android:layout_marginStart="@dimen/dp_48"
    android:layout_marginEnd="@dimen/dp_48"
    android:layout_marginBottom="@dimen/dp_36"
    android:background="@drawable/bg_conner_grey"
    android:drawableStart="@drawable/ic_password"
    android:drawablePadding="@dimen/dp_20"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:hint="@string/register_account_hint"
    android:inputType="number"
    android:padding="@dimen/dp_12"
    android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/edit_register_passord_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_below="@id/edit_register_password"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_48"
        android:background="@drawable/bg_conner_grey"
        android:drawableStart="@drawable/ic_register_password"
        android:drawablePadding="@dimen/dp_20"
        android:hint="@string/register_confirm_password_hint"
        android:inputType="number"
        android:padding="@dimen/dp_12"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btn_register_signup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_below="@id/edit_register_passord_confirm"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_48"
        android:background="@drawable/bg_conner_green"
        android:text="@string/register"
        android:padding="@dimen/dp_12"
        android:textSize="@dimen/dp_21"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true" />


</RelativeLayout>