<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_home_pager_group"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_12"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorCard"
    app:cardCornerRadius="@dimen/dp_3"
    app:cardElevation="@dimen/dp_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_12"
        android:transitionName="@string/share_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


                <TextView
                    android:id="@+id/item_home_pager_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableStart="@mipmap/icon_author"
                    android:gravity="center"
                    android:text="sss"
                    android:textColor="@color/comment_text"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/item_home_pager_chapterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/item_home_pager_author"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="四大组件/handler"
                    android:textColor="@color/colorPrimaryOverlay"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/item_home_pager_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111111111111111111111111111111111111111"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/comment_text"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_16"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/item_home_pager_tag_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/item_home_pager_tag_read_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_tag_read_background_normal"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:text="新"
                    android:textColor="@color/light_deep_red"/>

                <TextView
                    android:id="@+id/item_home_pager_tag_green_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:textColor="@color/light_green"
                    android:background="@drawable/shape_tag_green_background_normal"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="项目"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_12"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/item_home_pager_like_iv"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:contentDescription="@null"
                android:src="@drawable/icon_like_article_not_selected"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/item_home_pager_niceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/ic_time"
                android:drawablePadding="@dimen/dp_5"
                android:layout_toEndOf="@+id/item_home_pager_like_iv"
                android:layout_toStartOf="@+id/item_home_pager_tag_group"
                android:text="12小时之前"
                android:gravity="center_vertical"
                android:textColor="@color/comment_text"
                android:layout_marginStart="@dimen/dp_12" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>